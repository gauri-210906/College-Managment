<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HOD.HodHomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rvTeacherHomeFragmentDepartmentList"
        android:layout_marginTop="10sp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvTeacherHomeFragmentStudentLocation"
        app:cardElevation="16sp"
        app:cardCornerRadius="16sp"
        android:layout_margin="16sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTeacherHomeFragmentStudentLocation"
                android:text="View Students Location"
                android:textSize="18sp"
                android:textColor="@color/blue_light"
                android:textStyle="bold"
                android:drawablePadding="8sp"
                android:drawableLeft="@drawable/map"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>