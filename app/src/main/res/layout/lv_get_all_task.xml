<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/cvlvgetalltaskTaskList"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/lvivgetalltaskTaskImage"
            android:scaleType="centerCrop"
            android:src="@drawable/task"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/tvgetalltaskTaskSubject"
            android:text="Subject"
            android:textColor="@color/light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/lvivgetalltaskTaskImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/tvgetalltaskTaskDescription"
            android:text="Description"
            android:textColor="@color/light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tvgetalltaskTaskSubject"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/tvlvgetAllTaskSubmitBy"
            android:text="Submit by"
            android:textColor="@color/light"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="60sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/tvgetalltaskTaskDeadline"
            android:text="Deadline"
            android:textColor="@color/light"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignTop="@id/tvlvgetAllTaskSubmitBy"
            android:layout_below="@id/tvgetalltaskTaskDescription"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="15sp"
            />

    </RelativeLayout>
    
</androidx.cardview.widget.CardView>