<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".admin.ShowTeacherProfileActivity">


        <ImageView
            android:id="@+id/ivShowStaffWiseDetailsProfilePhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/baseline_insert_photo_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStaffWiseDetailsName"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Mobile Number"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvShowStaffWiseDetailsMobileNo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Mobile Number"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Email ID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStaffWiseDetailsEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Email ID"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Branch"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStaffWiseDetailsBranch"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Branch"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Experience"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStaffWiseDetailsExperience"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Experience"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Semester"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStaffWiseDetailsEducation"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Education"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Location"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStaffWiseDetailsAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Address"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:alpha="0.8"
            android:paddingLeft="16sp"
            android:text="Username"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsUsername"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7sp" />

    </LinearLayout>
</ScrollView>