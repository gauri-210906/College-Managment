<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".teacher.ShowStudentWiseDetailsActivity">


        <ImageView
            android:id="@+id/ivShowStudentWiseDetailsProfilePhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/baseline_insert_photo_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="20sp"
            android:paddingLeft="16sp"
            android:text="Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsName"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Mobile Number"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvShowStudentWiseDetailsMobileNo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Mobile Number"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Enrollment Number"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsEnrollmentNo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Enrollment Number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Email ID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Email ID"
            android:textSize="20sp"
            android:textStyle="bold"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Branch"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsBranch"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Branch"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Class"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsClass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Class"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Semester"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsSemester"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Semester"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Aadhar Number"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsAadharno"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Aadhar Number"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Location"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Address"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="8sp"
            android:paddingLeft="16sp"
            android:text="Username"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowStudentWiseDetailsUsername"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7sp" />


    </LinearLayout>
</ScrollView>