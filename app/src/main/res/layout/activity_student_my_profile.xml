<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        tools:context=".student.StudentMyProfileActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp">

            <ImageView
                android:id="@+id/ivMyProfilePhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/baseline_insert_photo_24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMyProfileEditProfile"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="58sp"
                android:layout_marginTop="143dp"
                android:background="@drawable/edit_profile_bg"
                android:drawableRight="@drawable/baseline_edit_24"
                android:paddingRight="10sp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvMyProfileName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileMobileNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Mobile Number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileEnrollmentNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Enrollment Number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Email ID"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileBranch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Branch"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileClass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Class"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileSemester"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Semester"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileAadharno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Aadhar Number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfileUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProfilePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Password"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyProfileSignOut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btnbackground"
            android:text="Sign out"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>


    </LinearLayout>
</ScrollView>
