<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher.UpdateNotificationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="25sp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Update Note..."
        android:textColor="@color/deep_blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUpdateNotificationActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16sp"
        android:background="@drawable/edit_shape"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        android:hint="Title"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/deep_blue"
        android:textColorHint="@color/deep_blue" />


    <EditText
        android:id="@+id/etUpdateNotificationActivityDescription"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16sp"
        android:background="@drawable/edit_shape"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="top"
        android:hint="Description"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/deep_blue"
        android:textColorHint="@color/deep_blue" />


    <Button
        android:id="@+id/btnUpdateNotificationActivityButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edit_shape"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>