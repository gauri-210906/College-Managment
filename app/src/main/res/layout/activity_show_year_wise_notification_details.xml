<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher.showYearWiseNotificationDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="25sp"
            android:text="Note..."
            android:textColor="@color/deep_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ivShowYearWiseNotificationDetailsYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="25sp"
            android:text="year"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ivShowYearWiseNotificationDetailsEditNote"
            android:layout_width="20dp"
            android:layout_height="30sp"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="25sp"
            android:src="@drawable/edit_icon" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvShowYearWiseNotificationDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16sp"
        android:background="@drawable/edit_shape"
        android:elevation="2dp"
        android:padding="10sp"
        android:text="Title"
        android:textColor="@color/deep_blue"
        android:textColorHint="@color/deep_blue"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tvShowYearWiseNotificationDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16sp"
        android:background="@drawable/edit_shape"
        android:elevation="2dp"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Description"
        android:textColor="@color/deep_blue"
        android:textColorHint="@color/deep_blue" />

</LinearLayout>