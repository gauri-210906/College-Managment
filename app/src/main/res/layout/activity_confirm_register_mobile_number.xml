<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ConfirmRegisterMobileNumberActivity">


    <ImageView
        android:id="@+id/ivConfirmRegisterMobileNumberIcon"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text="Forgot Password ?"
        android:textColor="@color/blue_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:alpha="0.8"
        android:gravity="center_horizontal"
        android:text="Please enter your registered mobile number"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etConfirmRegisterMobileNumberNumber"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="50dp"
        android:hint="Mobile Number"
        android:inputType="number"
        android:maxLength="10"
        android:padding="10sp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmRegisterNumberVerify"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@drawable/btnbackground"
        android:text="Verify"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>

















