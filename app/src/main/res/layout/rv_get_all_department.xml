<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rv_get_all_department_department"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardElevation="16sp"
        app:cardCornerRadius="16sp"
        android:layout_margin="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:id="@+id/iv_rv_department_image"
                android:src="@drawable/task_loading"
                android:layout_marginTop="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rv_department_name"
                android:text="department"
                android:textSize="18sp"
                android:textColor="@color/blue_195"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="13sp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>