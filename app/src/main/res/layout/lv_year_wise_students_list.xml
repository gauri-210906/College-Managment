<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_year_wise_students_list"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="16sp"
        app:cardElevation="16sp"
        android:layout_margin="8sp">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_margin="10sp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tv_year_wise_students_list_student_name"
              android:text="Student Name"
              android:textSize="18sp"
              android:textColor="@color/blue_light"
              android:textStyle="bold" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tv_year_wise_students_list_enrollment_number"
              android:text="Enrollment number"
              android:textSize="13sp"
              android:textColor="@color/black"
              android:textStyle="normal"
              />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/black"
              android:layout_marginTop="7sp"/>

      </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>