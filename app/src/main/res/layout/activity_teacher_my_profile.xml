<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.TeacherMyProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp">

            <ImageView
                android:id="@+id/ivTeacherMyProfilePhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/baseline_insert_photo_24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTeacherMyProfileEditProfile"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="58sp"
                android:layout_marginTop="143dp"
                android:background="@drawable/edit_profile_bg"
                android:drawableRight="@drawable/baseline_edit_24"
                android:paddingRight="10sp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvTeacherMyProfileName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTeacherMyProfileMobileNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Mobile Number"
            android:textSize="20sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/tvTeacherMyProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Email ID"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTeacherMyProfileBranch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Branch"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTeacherMyProfileExperience"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Experience"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTeacherMyProfileEducation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Education"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvTeacherMyProfileUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTeacherMyProfilePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:text="Password"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTeacherMyProfileSignOut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btnbackground"
            android:text="Sign out"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>


    </LinearLayout>
</ScrollView>